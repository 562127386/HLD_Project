            $.ajax({
                url: "/IOT/IOT_Order_Sec/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    data.OrderDate = new Date(data.OrderDate).Format("yyyy-MM-dd");
