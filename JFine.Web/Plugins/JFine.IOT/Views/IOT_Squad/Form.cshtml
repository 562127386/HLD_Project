@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/IOT/IOT_Squad/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
    });

    //初始化组件
    function initControl() {
        $("#LineCode").bindSelect({
            //url: '/SysManage/ItemsDetail/GetSelectJson?Code=ProductLine',
            url: '/IOT/IOT_ProductLine/GetSelectJson',
            change: function (data) {
                $("#LineName").val(data.text);
            }
        })
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        $.submitForm({
            url: "/IOT/IOT_Squad/SaveForm?keyValue=" + keyValue,
            param: postData,
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>

<form id="form1">
    <div style="margin: 10px 10px 10px 10px;">
        <table class="form">
            <tr>

                <th class="formTitle">产线名称</th>
                <td class="formValue">
                    <input name="LineName" id="LineName" type="hidden" />
                    <select id="LineCode" name="LineCode" type="text"
                            class="form-control  required" placeholder="请输入"></select>
                </td>
                <th class="formTitle">岗位</th>
                <td class="formValue">
                    <input id="Position" name="Position" type="text"
                           class="form-control  required" placeholder="请输入" />
                </td>
            </tr>
            <tr>


                <th class="formTitle">姓名</th>
                <td class="formValue">
                    <input id="Name" name="Name" type="text"
                           class="form-control  required" placeholder="请输入" />
                </td>
                <th class="formTitle">电话</th>
                <td class="formValue">
                    <input id="Phone" name="Phone" type="text"
                           class="form-control" placeholder="请输入" />
                </td>
            </tr>

            <tr>

                <th class="formTitle">班组</th>
                <td class="formValue">
                    <input id="Classify" name="Classify" type="text"
                           class="form-control  required" placeholder="请输入" />
