<script>
    var page_jf = {
        rows: 5,//每页行数
        page: 1,//当前页
        sidx: 'Id',//排序列
        sord: 'asc',//排序类型
        //records: 0,//总记录数
        //total: 0,//总页数
        LoadEnd: false
        //conditionJson:"1=1"
    }
    var uiDialogDown;
    $(function () {
        var dateNow = DateFormat(new Date(), "yyyy-MM-dd");
        var queryJson = { orderDate_Begin: dateNow, orderDate_End: dateNow };
        gridList(queryJson);
        bindSelect();
    })
    function gridList(queryJson) {
        // 假设: userlist.json 返回的数据格式为: { status:200, list:[] }, 配置 field: {data:"list"}
        // 初始化
        queryJson = JSON.stringify(queryJson)
        var uiList = bui.list({
            id: "#scrollList",
            url: "/IOT/IOT_Order_Sec/GetGridJson?queryJson=" + queryJson,
            pageSize: 5,
            data: page_jf,
            // 如果返回的数组字段不在data,通过field重新定义
            field: {
                page: "page",
                //size: "pageSize",
                data: "rows"
            },
            template: function (data) {
                var html = "";
                data.map(function (el, index) {
                    var startStatus = el.StartStatus == 0 ? "未启动" : "已启动";
                    var proceedStatus;
                    var proceedColor;
                    var orderDate = DateFormat(new Date(el.OrderDate), "yyyy-MM-dd");
                    var qualifyQuantity = el.QualifyQuantity == null ? 0 : el.QualifyQuantity;
                    switch (el.ProceedStatus) {
                        case "0":
                            proceedStatus = "未开始";
                            proceedColor = "gray";
                            break;
                        case "1":
                            proceedStatus = "生产中";
                            proceedColor = "green";
                            break;
                        case "2":
                            proceedStatus = "暂停中";
                            proceedColor = "red";
                            break;
                        case "3":
                            proceedStatus = "已完成";
                            proceedColor = "blue";
                            break;
                        default:
                            break;
                    }
                    html += '<div class="section-title" style="background-color:#e0e6ee;"><span style="font-size:0.5rem">' + el.OrderName + '</span></div>'
                        + '    <div class="bui-btn bui-box" onclick="editOrder(\'' + el.Id + '\')" id = "updateBL">'
                        + '         <div class="span1">'
                        + '             <h3 class="item-title">' + el.PName + '</h3>'
                        + '             <p class="item-text"><span class="bui-label">状态</span><span class="span_button" style="background-color:' + proceedColor + ';border-left:10px solid ' + proceedColor + ';border-right:10px solid ' + proceedColor + ';color:white" onclick=proceedSpanClick2(\'' + el.Id + '\',event)>' + proceedStatus + '</span></p>'
                        + '<p class="item-text"><span class="bui-label">产线名称</span><span class="bui-value">' + el.ProductLineName + '</span></p><p class="item-text"><span class="bui-label">订单日期</span><span class="bui-value">' + orderDate + '</span></p>'
                        + '             <p class="item-text"><span class="bui-label">计划数量</span><span class="bui-value">' + el.PlanQuantity + '</span></p>'
                        + '             <p class="item-text"><span class="bui-label">合格数量</span><span class="bui-value">' + qualifyQuantity + '</span></p>'
                        + '         </div>'
                        + '         <i class="icon-listright"></i>'
                        + '</div>'
                });
                return html;
            }
        });
    }

    function bindSelect() {
        // 绑定订单日期
        var dateTime = new Date();
        dateTime = dateTime.setDate(dateTime.getDate() - 3);
        dateTime = new Date(dateTime);  
        var OrderDate_Begin = $("#OrderDate_Begin");
        var uiPickerdate = bui.pickerdate({
            handle: "#OrderDate_Begin",
            // input 显示的日期格式
            formatValue: "yyyy-MM-dd",
            value: dateTime,
            cols: {
                hour: "none",
                minute: "none",
                second: "none"
            },
            onChange: function (value) {
                OrderDate_Begin.val(value);
            }
        });
        var OrderDate_End = $("#OrderDate_End");
        var uiPickerdate = bui.pickerdate({
            handle: "#OrderDate_End",
            // input 显示的日期格式
            formatValue: "yyyy-MM-dd",
            cols: {
                hour: "none",
                minute: "none",
                second: "none"
            },
            onChange: function (value) {
                OrderDate_End.val(value);
            }
        });
        $(".btn-search").click(function () {
            var orderDate_Begin = $("#OrderDate_Begin").val();
            var orderDate_End = $("#OrderDate_End").val();
            var searchText = $("#searchText").val();
            var queryJson = {};
            queryJson.orderDate_Begin = orderDate_Begin;
            queryJson.orderDate_End = orderDate_End;
            queryJson.searchText = searchText;
            $(".bui-list").html('');
            gridList(queryJson);
        })
    }
    function editOrder(keyValue) {
        //$(location).attr('href', '/IOT/IOT_Order_Sec/Form_ChangeQ_M?keyValue=' + keyValue);
        //设置src参数
        $("#Form_Order_M_Frame").attr("src", '/IOT/IOT_Order_Sec/Form_Order_M?keyValue=' + keyValue);
        uiDialogDown = bui.dialog({
            id: "#dialogDown",
            effect: "showIn",
            position: "right",
            fullscreen: true,
            buttons: []
        });
        uiDialogDown.open();
    }
    function proceedSpanClick(keyValue, event) {
        event.stopPropagation();
        bui.confirm("确认是否切换进行中订单?", function (e) {
            //this 是指点击的按钮
            var text = $(e.target).text();
            if (text == "确定") {
                $.ajax({
                    url: '/IOT/IOT_Order_Sec/ChangeProceedOrder?keyValue=' + keyValue,
                    type: 'POST',
                    success: function (data) {
                        location.reload();
                    }
                })
            }
            this.close()
        });
    }
    function StartProceed(keyValue, ProceedStatus, OrderDate,event) {
        event.stopPropagation();
        //校验操作订单日期是否为当日订单。
        if (OrderDate != DateFormat(new Date(), "yyyy-MM-dd")) {
            bui.alert("该订单不是当日订单，不可进行开工操作。");
            return;
        }
        if (ProceedStatus.indexOf("生产中") > 0) {
            bui.alert("订单生产中,无需切换");
            return;
        }
        if (ProceedStatus.indexOf("已完成") > 0) {
            bui.alert("订单已完成,不可切换");
            return;
        }
        bui.confirm("确认是否切换生产中订单?该产线当日其余订单将暂停。", function (r) {
            if (r) {
                $.ajax({
                    url: '/IOT/IOT_Order_Sec/ChangeProceedOrder?keyValue=' + keyValue,
                    type: 'POST',
                    success: function (data) {
                        location.reload();
                    }
                })
            }
        })
    }
    function FinishProceed(keyValue, ProceedStatus, event) {
        event.stopPropagation();
        if (ProceedStatus.indexOf("未开始") > 0) {
           bui.alert("订单未开始!无需完工。");
            return;
        }
        if (ProceedStatus.indexOf("已完成") > 0) {
            bui.alert("订单已完成!无需完工。");
            return;
        }
        bui.confirm("确认是否完工?将自动切换当日下一订单为生产中。", function (r) {
            if (r) {
                $.ajax({
                    url: '/IOT/IOT_Order_Sec/FinishProceedOrder?keyValue=' + keyValue,
                    type: 'POST',
                    success: function (data) {
                        location.reload();
                    }
                })
            }
        })
    }
    function DateFormat(date, fmt) {
        var o = {
            "M+": date.getMonth() + 1, //月份
            "d+": date.getDate(), //日
            "H+": date.getHours(), //小时
            "m+": date.getMinutes(), //分
            "s+": date.getSeconds(), //秒
            "q+": Math.floor((date.getMonth() + 3) / 3), //季度
            "S": date.getMilliseconds() //毫秒
        };
        if (/(y+)/.test(fmt)) fmt = fmt.replace(RegExp.$1, (date.getFullYear() + "").substr(4 - RegExp.$1.length));
        for (var k in o)
            if (new RegExp("(" + k + ")").test(fmt)) fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
        return fmt;
    }
    function closeIframe(flag) {
        uiDialogDown.close();
        //1不刷新，2提交刷新
        if (flag == "2") {
            $(".btn-search").trigger("click");
        }

    }
</script>
