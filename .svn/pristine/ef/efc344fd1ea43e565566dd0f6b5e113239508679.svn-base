@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        var queryJson = SetDefaultDate();
        gridList(queryJson);
    })
      function SetDefaultDate() {
        var date_Begin = new Date();
        date_Begin = date_Begin.setDate(date_Begin.getDate() - 7);
        date_Begin = new Date(date_Begin).Format("yyyy-MM-dd");
        var date_End = new Date().Format("yyyy-MM-dd");;
        $("#orderDate_Begin").val(date_Begin);
        $("#orderDate_End").val(date_End);
        var queryJson = {
            orderDate_Begin: date_Begin,
            orderDate_End: date_End
        }
        return JSON.stringify(queryJson);
    }
    function gridList(queryJson) {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/IOT/IOT_Order_Sec/GetGridJson",
            height: $(window).height() - 138,
            postData: { queryJson: queryJson },
            colModel: [

                { label: "", name: "Id", width: 150, align: 'left', hidden: true },


                { label: "", name: "StartStatus", width: 150, align: 'left', hidden: true },

                {
                    label: "状态", name: "ProceedStatus", width: 150, align: 'left', formatter: function (value, options, row) {
                        if (value == "0") {
                            return '<span class=\"label label-default\">未开始</span>';
                        }
                        else if (value == "1") {
                            return '<span class=\"label label-success\">生产中</span>';
                        }
                        else if (value == "2") {
                            return '<span class=\"label label-danger\">暂停中</span>';
                        }
                        else if (value == "3") {
                            return '<span class=\"label label-primary\">已完成</span>';
                        }
                        else {
                            return '<span class=\"label label-default\">未开始</span>';
                        }
                    }
                },
                { label: "订单号", name: "OrderName", width: 150, align: 'left' },

                {
                    label: "订单日期", name: "OrderDate", width: 150, align: 'left', formatter: function (value, options, row) {
                        return new Date(value).Format("yyyy-MM-dd");
                    }
                },

                { label: "产线", name: "ProductLineName", width: 150, align: 'left' },

                { label: "型号", name: "PCode", width: 150, align: 'left' },

                { label: "名称", name: "PName", width: 150, align: 'left' },

                { label: "计划数", name: "PlanQuantity", width: 150, align: 'left' },

                {
                    label: "订单开始时间", name: "OrderBegin_Time", width: 150, align: 'left', formatter: function (value, options, row) {
                        return new Date(value).Format("yyyy-MM-dd HH:mm");
                    }
                },

                {
                    label: "订单结束时间", name: "OrderEnd_Time", width: 150, align: 'left', formatter: function (value, options, row) {
                        return new Date(value).Format("yyyy-MM-dd HH:mm");
                    }
                },

            ],
            pager: "#gridPager",
            sortname: 'CreateDate desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            var queryJson = {
                orderDate_Begin: $("#orderDate_Begin").val(),
                orderDate_End: $("#orderDate_End").val(),
                PCode: $("#PCode").val(),
                ProductLine: $("#ProductLine").val()
            }
            $gridList.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            $.modalOpen({
                id: "Details",
                title: "查看订单信息",
                url: "/IOT/IOT_Order_Sec/Details2?keyValue=" + keyValue,
                width: "550px",
                height: "620px",
                btn: null,
            });
        }
    }

    function btn_change() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue)) {
            $.modalOpen({
                id: "Form",
                title: "修改合格数量",
                url: "/IOT/IOT_Order_Sec/Form_ChangeQ?keyValue=" + keyValue,
                width: ($(window).width() * 0.8) + "px",
                height: ($(window).height() * 0.7) + "px",
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
        }
    }
    //切换生产中订单
    function btn_proceed() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        var proceedStatus = $("#gridList").jqGridRowValue().ProceedStatus;
        var OrderDate = $("#gridList").jqGridRowValue().OrderDate;
        if ($.checkedArray(keyValue)) {
            //校验操作订单日期是否为当日订单。
            if (OrderDate != new Date().Format("yyyy-MM-dd")) {
                $.modalAlert("该订单不是当日订单，不可进行开工操作。", "warning");
                return;
            }
            if (proceedStatus.indexOf("生产中") > 0) {
                $.modalAlert("订单生产中,无需切换", "warning");
                return;
            }
            if (proceedStatus.indexOf("已完成") > 0) {
                $.modalAlert("订单已完成,不可切换", "warning");
                return;
            }
            $.modalConfirm("确认是否切换生产中订单?该产线当日其余订单将暂停。", function (r) {
                if (r) {
                    $.submitAjax({
                        url: '/IOT/IOT_Order_Sec/ChangeProceedOrder?keyValue=' + keyValue,
                        success: function (data) {
                            $.currentWindow().$("#gridList").trigger("reloadGrid");
                        }
                    })
                }
            })
        }

    }
    //手动修改完工
    function btn_finish() {
        var keyValue = $("#gridList").jqGridRowValue().Id;
        var proceedStatus = $("#gridList").jqGridRowValue().ProceedStatus;
        if ($.checkedArray(keyValue)) {
   
            if (proceedStatus.indexOf("未开始") > 0) {
                $.modalAlert("订单未开始!无需完工。", "warning");
                return;
            }
            if (proceedStatus.indexOf("已完成") > 0) {
                $.modalAlert("订单已完成!无需完工。", "warning");
                return;
            }
            $.modalConfirm("确认是否完工?将自动切换当日下一订单为生产中。", function (r) {
                if (r) {
                    $.submitAjax({
                        url: '/IOT/IOT_Order_Sec/FinishProceedOrder?keyValue=' + keyValue,
                        success: function (data) {
                            $.currentWindow().$("#gridList").trigger("reloadGrid");
                        }
                    })
                }
            })
        }
    }
    function refreshGrid() {
        $("#gridList").trigger("reloadGrid");
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">

            <a id="JF-Details" class="btn btn-primary dropdown-text" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a>
            <a id="JF-Details" class="btn btn-primary dropdown-text" onclick="btn_change()"><i class="fa fa-pencil-square-o"></i>更改完工数</a>
            <a id="JF-Details" class="btn btn-primary dropdown-text" onclick="btn_proceed()"><i class="fa fa-bell-o"></i>订单开工</a>
            <a id="JF-Details" class="btn btn-primary dropdown-text" onclick="btn_finish()"><i class="fa fa-fast-forward"></i>订单完工</a>
        </div>
        <div id="toolbar" class="btn-group">
        </div>
        <script>$('#toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="orderDate_Begin" type="text" class="form-control  input-wdatepicker" onfocus="WdatePicker()" placeholder="订单日期开始" style="width: 140px;">
                        <input id="orderDate_End" type="text" class="form-control  input-wdatepicker" onfocus="WdatePicker()" placeholder="订单日期结束" style="width: 140px;">
                        <input id="ProductLine" type="text" class="form-control  " placeholder="产线" style="width: 140px;">
                        <input id="PCode" type="text" class="form-control  " placeholder="型号" style="width: 140px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

