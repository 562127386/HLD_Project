<script>
    var pageview = {};
    bui.ready(function () {
        // 页面初始化
        $('html').height("100%");
        $('body').height("100%");
        $('main').height("100%");
        pageview.init();
    })

    pageview.bind = function () {
        /*初始化页面的链接跳转*/
        bui.btn({ id: "#page", handle: ".bui-btn,.bui-btn-text" }).load();
    }

    pageview.init = function () {

        $.ajax({
            type: 'GET',
            url: "/IOT/IOT_Order_Sec/GetFormJson?keyValue=" + $("#Id").val(),
            dataType: 'json',
            success: function (data) {
                $("#form1").formSerialize(data);
                var OrderDate = DateFormat(new Date(data.OrderDate), "yyyy-MM-dd");
                $("#OrderDate").val(OrderDate);
                var OrderBegin_Time = DateFormat(new Date(data.OrderBegin_Time), "yyyy-MM-dd HH:mm");
                $("#OrderBegin_Time").val(OrderBegin_Time);
                var OrderEnd_Time = DateFormat(new Date(data.OrderEnd_Time), "yyyy-MM-dd HH:mm");
                $("#OrderEnd_Time").val(OrderEnd_Time);
            }
        });
    
    }

    function DateFormat(date, fmt) {
        var o = {
            "M+": date.getMonth() + 1, //月份 
            "d+": date.getDate(), //日 
            "H+": date.getHours(), //小时 
            "m+": date.getMinutes(), //分 
            "s+": date.getSeconds(), //秒 
            "q+": Math.floor((date.getMonth() + 3) / 3), //季度 
            "S": date.getMilliseconds() //毫秒 
        };
        if (/(y+)/.test(fmt)) fmt = fmt.replace(RegExp.$1, (date.getFullYear() + "").substr(4 - RegExp.$1.length));
        for (var k in o)
            if (new RegExp("(" + k + ")").test(fmt)) fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
        return fmt;
    }

    //关闭Form
    function closeForm(flag) {
        //1不刷新，2提交刷新
        window.parent.closeIframe(flag);
    }


</script>

